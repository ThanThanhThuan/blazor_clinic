@page "/dashboard"
@using PatientPortal.Shared
@inject HttpClient Http
@inject NavigationManager Navigation

<h3>Patient Portal Dashboard</h3>

@if (isLoading)
{
    <p><em>Loading your medical data...</em></p>
}
else
{
    <div class="row">
        <!-- Appointments Section -->
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">Upcoming Appointments</div>
                <div class="card-body">
                    @if (appointments.Any())
                    {
                        <ul class="list-group">
                            @foreach (var appt in appointments)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>@appt.Reason</span>
                                    <span class="badge bg-info rounded-pill">@appt.AppointmentDate.ToShortDateString()</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>No upcoming appointments.</p>
                    }
                    <button class="btn btn-outline-primary mt-3" @onclick="BookAppointment">Book New</button>
                </div>
            </div>
        </div>

        <!-- Medical Records Section -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">Medical History & Results</div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Type</th>
                                <th>Title</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var record in records)
                            {
                                <tr>
                                    <td>@record.DateCreated.ToShortDateString()</td>
                                    <td>@record.Type</td>
                                    <td>
                                        <strong>@record.Title</strong><br />
                                        <small>@record.Description</small>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<MedicalRecord> records = new();
    private List<Appointment> appointments = new();
    private bool isLoading = true;

    // Hardcoded Patient ID for demo purposes.
    // In a real app, get this from AuthenticationStateProvider
    private int currentPatientId = 1;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Fetch Data from API
            records = await Http.GetFromJsonAsync<List<MedicalRecord>>($"api/Portal/records/patient/{currentPatientId}");
            appointments = await Http.GetFromJsonAsync<List<Appointment>>($"api/Portal/appointments/patient/{currentPatientId}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void BookAppointment()
    {
        // Navigate to a booking page (not implemented in this snippet)
        Navigation.NavigateTo("/book-appointment");
    }
}